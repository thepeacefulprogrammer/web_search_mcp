# Web Search MCP Server Configuration
# Environment variables with WEB_SEARCH_ prefix override YAML config values

# Server Configuration
WEB_SEARCH_SERVER_HOST=localhost
WEB_SEARCH_SERVER_PORT=8000
WEB_SEARCH_SERVER_NAME=web-search-mcp-server

# Logging Configuration  
WEB_SEARCH_LOGGING_LEVEL=INFO
WEB_SEARCH_LOGGING_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
WEB_SEARCH_LOGGING_FILE_ENABLED=true
WEB_SEARCH_LOGGING_CONSOLE_ENABLED=true

# Search Configuration
WEB_SEARCH_SEARCH_BACKEND=duckduckgo
WEB_SEARCH_SEARCH_MAX_RESULTS=20
WEB_SEARCH_SEARCH_TIMEOUT=15
WEB_SEARCH_SEARCH_USER_AGENT_ROTATION=true
WEB_SEARCH_SEARCH_CONTENT_EXTRACTION=true
WEB_SEARCH_SEARCH_RESULT_FILTERING=true

# Feature Toggles
WEB_SEARCH_FEATURES_ENABLE_AUTH=false
WEB_SEARCH_FEATURES_ENABLE_CACHING=true
WEB_SEARCH_FEATURES_ENABLE_METRICS=false
WEB_SEARCH_FEATURES_ENABLE_CORS=true

# Application Settings
WEB_SEARCH_APPLICATION_MAX_CONCURRENT_SEARCHES=5
WEB_SEARCH_APPLICATION_SEARCH_TIMEOUT=30
WEB_SEARCH_APPLICATION_REQUEST_TIMEOUT=30

# External Service Settings
WEB_SEARCH_EXTERNAL_SERVICES_DUCKDUCKGO_TIMEOUT=15
WEB_SEARCH_EXTERNAL_SERVICES_DUCKDUCKGO_RETRIES=3
WEB_SEARCH_EXTERNAL_SERVICES_DUCKDUCKGO_SAFE_SEARCH=moderate

# Cache Configuration
WEB_SEARCH_CACHE_TYPE=memory
WEB_SEARCH_CACHE_MAX_SIZE=1000
WEB_SEARCH_CACHE_TTL=3600

# Optional: Set custom config file path
# CONFIG_PATH=./config/custom_config.yaml 